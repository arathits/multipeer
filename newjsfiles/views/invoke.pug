html
  head
    style
      include main.css
      include tab.css
      include verticaltab.css
    style(type="text/css").
      div {
        width: 100%;
        display: inline-block;
        box-sizing: border-box;
        background-color: #4CAF50;
        color: white;
      }
  body
    .tab
      label.tablinks=uname
      form(style='height:auto' method='GET' action='/logout')
        input#username.form-control(type='hidden' value=uname name='username')
        button.tablinks(style='float:right') Logout
        button.tablinks(type='submit' style='float:right' formaction='/login') Home

    form(style='width:90%' class="modal-content animate")
      div.form-group(style='margin: 8px 0;padding: 12px 20px')
        label(style='padding:0px 52px 0px 0px') Product Id:
        label=pid
      div.form-group(style='margin: 8px 0;padding: 12px 20px')
        label(style='padding:0px 30px 0px 0px') Product Type:
        label=ptype
      div.form-group(style='margin: 8px 0;padding: 12px 20px')
        label(style='padding:0px 23px 0px 0px') Product Name:
        label=pname
      div.form-group(style='margin: 8px 0;padding: 12px 20px')
        label(style='padding:0px 65px 0px 0px') Quantity:
        label=pqty
      div.form-group(style='margin:8px 0; padding: 12px 20px')
        label(style='padding:0px 63px 0px 0px') Location:
        label=ploc
